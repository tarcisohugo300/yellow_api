// yellow_api/bin/www.js
// ðŸ’¡ Importar el servidor con todo adjunto
var server = require('../app'); 
var debug = require('debug')('food-delivery:server');
// âŒ http, fs, io_module ya no son necesarios aquÃ­

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || '3000');
// Usar server.app para acceder a la configuraciÃ³n de Express
server.app.set('port', port); 

// âŒ ELIMINAR: Toda la lÃ³gica de Socket.IO
// âŒ ELIMINAR: Toda la lÃ³gica de fs.readdirSync (carga de controllers)

/**
 * Listen on provided port, on all network interfaces.
 */
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

// ... (normalizePort, onError, onListening se dejan IGUAL) ...
/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
// ... (cÃ³digo sin cambios) ...
Â  Â  var port = parseInt(val, 10);
Â  Â  if (isNaN(port)) { return val; }
Â  Â  if (port >= 0) { return port; }
Â  Â  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
// ... (cÃ³digo sin cambios) ...
Â  Â  if (error.syscall !== 'listen') { throw error; }
Â  Â  var bind = typeof port === 'string' ? 'Pipe ' + port : 'Port ' + port;
Â  Â  switch (error.code) {
Â  Â  Â  Â  case 'EACCES': console.error(bind + ' requires elevated privileges'); process.exit(1); break;
Â  Â  Â  Â  case 'EADDRINUSE': console.error(bind + ' is already in use'); process.exit(1); break;
Â  Â  Â  Â  default: throw error;
Â  Â  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
Â  Â  var addr = server.address();
Â  Â  var bind = typeof addr === 'string' ? 'pipe ' + addr : 'port ' + addr.port;
Â  Â  debug('Listening on ' + bind);
Â  Â  console.log(`Server Start : ${addr.port}`); 
}